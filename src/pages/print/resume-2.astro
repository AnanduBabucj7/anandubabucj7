<ResumeLayout>
  <main class="mx-4 md:w-[700px] md:mx-auto leading-loose pb-10 text-sm">
    <header class="flex justify-between items-center">
      <div>
        <h1 class="text-4xl font-bold text-blue-700">Anandu Babu</h1>
        <h3 class="text-sm my-2">
          Frontend Engineer <span class="mx-4 text-sm">//</span> Mentor
        </h3>
      </div>
      <div class="">
        <a class="flex items-center mr-3">
          <img src="/assets/icons/phone.png" class="w-3 h-3 mr-2" alt="Phone" />
          +91 9947975674
        </a>
      </div>
    </header>
    <!-- links -->
    <div class="border-b border-blue-600">
      <p class="flex items-start justify-between mt-2 text-sm leading-loose">
        <a href="https://anandubabu.web.app" class="flex items-center mr-3">
          <img
            src="/assets/icons/resume-web.svg"
            class="w-3 h-3 mr-2"
            alt="portfolio website"
          />
